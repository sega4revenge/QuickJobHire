<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="100"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/imAccount"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:scaleType="fitXY"
            android:src="@drawable/user_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="Nguyá»…n SÆ¡n Thá»" />

            <TextView
                android:id="@+id/tvMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="nguyễn sơn thọ" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:elevation="3dp"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#d4d4d4"/>

        <LinearLayout
            android:id="@+id/lnInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_pressed"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="100"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_account_box_black_24dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/st_info"
                    />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_pressed"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="100"
            android:paddingLeft="20dp"

            >


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#d4d4d4"
                android:layout_weight="10"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:paddingLeft="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#d4d4d4"
                    />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnChangePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_pressed"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="100"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock_black_24dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/st_CHANGE_PASSWORD"
                    />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_pressed"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="100"
            android:paddingLeft="20dp"

            >


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#d4d4d4"
                android:layout_weight="10"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:paddingLeft="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#d4d4d4"
                    />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnexit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_pressed"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="100"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_exit_to_app_black_24dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/action_logout"
                    />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_pressed"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="100"
            android:paddingLeft="20dp"

            >


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#d4d4d4"
                android:layout_weight="10"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:paddingLeft="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#d4d4d4"
                    />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_pressed"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="100"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_black_24dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/st_ttud"
                    />


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:elevation="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tencongviec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text dsft dsfsd Large Text dsfsd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:textColor="?attr/colorPrimary"
                    android:maxLines="1"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"

                    >

                    <!--<ImageView-->
                        <!--android:id="@+id/imageView"-->
                        <!--android:layout_width="18dp"-->
                        <!--android:layout_height="18dp"-->
                        <!--android:layout_marginTop="1dp"-->
                        <!--android:background="@drawable/vector_ic_home" />-->

                    <TextView
                        android:id="@+id/tenct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="MediumMediumMediumMediumMediumMediumMediumMedium Text Medium "
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:layout_marginRight="80dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:id="@+id/trangthai"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#c43737"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:weightSum="100">

                    <!--<ImageView-->
                        <!--android:id="@+id/imageView4"-->
                        <!--android:layout_width="18dp"-->
                        <!--android:layout_height="18dp"-->
                        <!--android:layout_below="@id/imageView"-->
                        <!--android:layout_marginTop="1dp"-->
                        <!--android:layout_toRightOf="@+id/thumbnail"-->
                        <!--android:background="@drawable/vector_ic_location" />-->
                    <TextView
                        android:id="@+id/diachi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imageView4"
                        android:text="Địa điểm "
                        android:maxLines="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textSize="14sp"
                        android:layout_weight="30"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/luong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="lương Large Text dsfsd Large Text dsfsd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_centerVertical="true"

                        android:layout_weight="30" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/dateup1"
                        android:gravity="right"
                        android:textColor="#ea3939"
                        android:layout_alignTop="@+id/luong"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="40" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

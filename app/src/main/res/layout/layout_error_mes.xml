<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    >



    <!-- Unable to connect -->
    <com.example.vinhnguyen.quickjob.font.RobotoLightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/server_unreachable"
        android:textSize="@dimen/text_large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/view" />

    <!-- Try again -->
    <com.example.vinhnguyen.quickjob.font.RobotoBoldTextView
        android:id="@+id/try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="@dimen/error_try_again_padding"
        android:text="@string/st_try_again"
        android:textColor="@color/accent"
        android:textSize="@dimen/text_xxlarge"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true" />

</RelativeLayout>